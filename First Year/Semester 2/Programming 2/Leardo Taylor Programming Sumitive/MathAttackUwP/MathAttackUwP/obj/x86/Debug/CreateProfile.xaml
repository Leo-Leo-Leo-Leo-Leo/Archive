<Page
    x:Class="MathAttackUwP.CreateProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MathAttackUwP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="300" Width="300">

    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="280" Stroke="Black" VerticalAlignment="Top" Width="272" Margin="10,10,0,0"/>

        <TextBlock x:ConnectionId='1' x:Name="lblName" HorizontalAlignment="Left" Margin="59,10,0,0" TextWrapping="Wrap" Text="Enter your name here." VerticalAlignment="Top" Width="179" Height="17"/>
        <TextBox x:ConnectionId='2' x:Name="txtName" HorizontalAlignment="Left" Height="24" Margin="59,33,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="179" MaxLength="8" TextAlignment="Center"/>
        <TextBlock x:ConnectionId='3' x:Name="lblPass" HorizontalAlignment="Left" Margin="59,115,0,0" TextWrapping="Wrap" Text="Enter a password here." VerticalAlignment="Top" Width="179" Height="17"/>
        <TextBox x:ConnectionId='4' x:Name="txtPass" HorizontalAlignment="Left" Height="24" Margin="59,138,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="179"  MaxLength="8" TextAlignment="Center"/>
        <TextBlock x:ConnectionId='5' x:Name="lblCnfName" HorizontalAlignment="Left" Margin="59,63,0,0" TextWrapping="Wrap" Text="Type it again to confirm." VerticalAlignment="Top" Width="179" Height="24"/>
        <TextBox x:ConnectionId='6' x:Name="txtCnfName" HorizontalAlignment="Left" Height="25" Margin="59,85,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="179"  MaxLength="8" TextAlignment="Center"/>
        <TextBlock x:ConnectionId='7' x:Name="lblCnfPass" HorizontalAlignment="Left" Margin="59,168,0,0" TextWrapping="Wrap" Text="Type it again to confrim." VerticalAlignment="Top" Width="179" Height="17"/>
        <TextBox x:ConnectionId='8' x:Name="txtCnfPass" HorizontalAlignment="Left" Height="25" Margin="59,190,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="179"  MaxLength="8" TextAlignment="Center"/>
        <Button x:ConnectionId='9' x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="149,234,0,0" VerticalAlignment="Top" Width="120" Height="40"                         FontSize="14" />
        <Button x:ConnectionId='10' x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="24,234,0,0" VerticalAlignment="Top" Width="120" Height="40"                         FontSize="14"/>

    </Grid>
</Page>

